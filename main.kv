FloatLayout:
	id: main_layout
	ListView:
		id: planeswalker_abilties
		size_hint: (.85, 0.35)
		pos_hint: {'x': 0.15, 'y': 0.0}
	FloatLayout:
		id: background_particles
	Image:
		id: character_portrait
		pos_hint: {'x': -0.35, 'y': -0.35}
	FloatLayout:
		id: foreground_particles
	BoxLayout:
		orientation: 'vertical'
		size_hint: (0.3, 0.1)
		pos_hint: {'center_x': 0.8, 'center_y': 0.8}
		Button:
			text: 'Configure app (or press F1)'
			on_release: app.open_settings()
			pos_hint: {'center_x': 0.0, 'center_y': 0.0}
		Spinner:
			id: class_spinner
			pos_hint: {'center_x': 0.0, 'center_y': 0.0}

[ThumbnailedListItem@SelectableView+RelativeLayout]:
    index: ctx.index
    size_hint_y: None
	height: ctx.height
    ListItemButton:
        index: ctx.index
        text: "[font=Beleren]%s[/font]" % ctx.text
        size_hint: (0.9, 0.65)
        #text_size: self.width * 0.95, None
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
	    markup: True
    Image:
        source: ctx.loyalty_source
        size_hint_x: 0.1
        size_hint_y: 1.0
        pos_hint: {'x': 0.905, 'y': 0}
    Label:
		text: "[font=Beleren][size=24][b]%s[/b][/size][/font]" % ctx.loyalty
        width: 20
        halight: 'center'
        markup: True
        pos_hint: {'x': 0.455, 'y': 0}