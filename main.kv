FloatLayout:
	MainView:
		cols: 1
		size_hint: (.75, 0.55)
		pos_hint: {'x': 0.25, 'y': 0.0}
	Image:
		source: "./assets/persona27.png"
		pos_hint: {'x': -0.25, 'y': -0.25}

[ThumbnailedListItem@SelectableView+RelativeLayout]:
    index: ctx.index
    size_hint_y: None
	height: ctx.height
    ListItemButton:
        index: ctx.index
        text: "[font=Beleren]%s[/font]" % ctx.text
        size_hint: (0.9, 0.65)
        #text_size: self.width * 0.95, None
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
	    markup: True
    Image:
        source: ctx.loyalty_source
        size_hint_x: 0.1
        size_hint_y: 1.0
        pos_hint: {'x': 0.915, 'y': 0}
    Label:
		text: "[font=Beleren]%s[/font]" % ctx.loyalty
        width: 20
        halight: 'center'
        markup: True
        pos_hint: {'x': 0.465, 'y': 0}